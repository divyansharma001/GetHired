                  <div className={cn("flex items-center text-xs space-x-1.5", appTheme.textMuted2)}>
                    <Calendar className="w-3.5 h-3.5" /> <span>Updated: {new Date(resume.updatedAt).toLocaleDateString()}</span>
                  </div>
